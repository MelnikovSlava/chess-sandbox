{
  "compilerOptions": {
    "jsx": "react",
    "module": "none",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
